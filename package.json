{
  "name": "drilling-job-board",
  "version": "1.0.0",
  "description": "Job board for a drilling company",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel start-backend start-frontend",
    "install": "npm-run-all --parallel install-backend install-frontend",
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "start-backend": "cd backend && npm dev",
    "start-frontend": "cd frontend && npm start",
    "build": "npm-run-all --parallel build-backend build-frontend",
    "build-backend": "cd backend && npm run build",
    "build-frontend": "cd frontend && npm run build",
    "lint": "npm-run-all --parallel lint-backend lint-frontend",
    "lint-backend": "cd backend && npm run lint",
    "lint-frontend": "cd frontend && npm run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
